{
    "manifest_version": 3,
    "name": "Driver Monitoring Chrome Extension",
    "version": "1.0.0",
    "description": "qweqweqwe",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "cookies",
        "scripting",
        "sidePanel",
        "https://app.monitoringdriver.com/*"
    ],
    "side_panel": {
        "default_path": "index.html"
    },
    "host_permissions": [
        "https://app.monitoringdriver.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://app.monitoringdriver.com/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ]
}